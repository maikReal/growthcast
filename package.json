{
  "name": "warp-drive",
  "displayName": "WarpDrive",
  "version": "0.0.1",
  "description": "A tool for analysis of Warpcast activities",
  "author": "Mike Krupin",
  "scripts": {
    "start": "next start",
    "dev": "run-p dev:*",
    "dev:plasmo": "plasmo dev",
    "dev:next": "next dev --port 1947",
    "build": "run-p build:*",
    "build:plasmo": "plasmo build",
    "build:next": "next build"
  },
  "dependencies": {
    "@ant-design/icons": "^5.3.6",
    "@neynar/nodejs-sdk": "^1.16.1",
    "antd": "^5.16.4",
    "axios": "^1.6.8",
    "next": "14.1.0",
    "node-fetch": "^3.3.2",
    "plasmo": "0.85.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-toastify": "^10.0.5",
    "styled-components": "^6.1.8"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@plasmohq/rps": "1.8.7",
    "@plasmohq/storage": "1.9.3",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "browserify-zlib": "^0.2.0",
    "https-browserify": "^1.0.0",
    "prettier": "3.2.4",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.1.0",
    "typescript": "5.3.3",
    "url": "^0.11.0",
    "util": "^0.12.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "tabs",
      "storage",
      "activeTab",
      "windows",
      "scripting",
      "http://localhost:3000/*"
    ],
    "content_scripts": [
      {
        "matches": [
          "http://localhost:3000/*"
        ],
        "js": [
          "../src/contents/content.ts"
        ]
      },
      {
        "matches": [
          "https://warpcast.com/*"
        ],
        "js": [
          "../src/contents/content-sidebar.tsx"
        ]
      }
    ]
  }
}
