{
  "name": "warp-drive",
  "displayName": "Warpdrive",
  "version": "2.1.0",
  "description": "Farcaster app that boosts your Web3 socials",
  "author": "Mike Krupin",
  "scripts": {
    "clean": "rm -rf dist build",
    "start": "next start",
    "dev": "run-p dev:*",
    "dev:plasmo": "plasmo dev",
    "dev:next": "next dev --port 1947",
    "build": "run-p build:*",
    "build:plasmo": "plasmo build",
    "build:next": "next build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@ant-design/icons": "^5.3.7",
    "@headlessui/react": "^1.7.19",
    "@neynar/nodejs-sdk": "^1.24.0",
    "@types/jsonwebtoken": "^9.0.6",
    "antd": "^5.17.2",
    "axios": "^1.6.8",
    "jsonwebtoken": "^9.0.2",
    "next": "14.1.0",
    "node-fetch": "^3.3.2",
    "plasmo": "0.85.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-toastify": "^10.0.5",
    "styled-components": "^6.1.11",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@plasmohq/rps": "1.8.7",
    "@plasmohq/storage": "1.9.3",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "browserify-zlib": "^0.2.0",
    "https-browserify": "^1.0.0",
    "prettier": "3.2.4",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "typescript": "5.3.3",
    "url": "^0.11.3",
    "util": "^0.12.5"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*",
      "http://*/"
    ],
    "permissions": [
      "tabs",
      "storage",
      "activeTab",
      "windows",
      "scripting",
      "background",
      "http://localhost:3000/*",
      "https://proxy.warp-drive.xyz/*",
      "https://dev.warp-drive.xyz/*"
    ],
    "content_scripts": [
      {
        "matches": [
          "http://localhost:3000/*",
          "https://proxy.warp-drive.xyz/*",
          "https://dev.warp-drive.xyz/*"
        ],
        "js": [
          "../src/contents/content.ts"
        ]
      },
      {
        "matches": [
          "https://warpcast.com/*"
        ],
        "js": [
          "../src/contents/content-sidebar.tsx"
        ]
      }
    ],
    "background": {
      "service_worker": "../src/background.ts"
    }
  }
}
